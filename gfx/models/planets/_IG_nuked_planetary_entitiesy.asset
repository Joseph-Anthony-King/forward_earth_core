###########################
# New tomb planets
###########################
# tomb 02 to 11
# Uses special heavy clouds covering most of the surface
# Uses 1 texture from each planet types (9 available at start + gaia)
# No normal because can't see it withh all the clouds, for better perf set to nonormal.dds
# Diffuse: 2k | Normal: X | Specular: 2k
# Last version : .180609
###########################
# Tomb Planet 02, alpine
entity = {
	name = "nuked_planet_02_entity"
	pdxmesh = "nuked_planet_01_mesh"
	meshsettings = {
		name = "planet_geosphereShape"
		texture_diffuse = "ig_alpine_03_nuked_2k_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "ig_alpine_03_2k_specular.dds"
	}
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "ig_clouds_heavy_01_4k_diffuse.dds"
		texture_normal = "ig_clouds_heavy_01_4k_normal.dds"
		texture_specular = "nospec.dds"
	}
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "ig_clouds_heavy_01_2k_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
	}
}
